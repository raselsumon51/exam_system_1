<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exam Result</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <div class="container mx-auto mt-10 px-4 py-6">
    <!-- Title -->
    <h1 class="text-3xl font-semibold text-center text-indigo-600 mb-8">Exam Result</h1>

    <!-- Student Information Section -->
    <section class="bg-white p-6 rounded-lg shadow-md mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Student Information</h2>
      <p class="text-lg text-gray-700"><strong>Email:</strong> <%= result.userDetails[0].email %></p>
      <p class="text-lg text-gray-700"><strong>Role:</strong> <%= result.userDetails[0].role %></p>
    </section>

    <!-- Exam Information Section -->
    <section class="bg-white p-6 rounded-lg shadow-md mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Exam Information</h2>
      <p class="text-lg text-gray-700"><strong>Subject Name:</strong> <%= result.examDetails[0].subjectName %></p>
      <p class="text-lg text-gray-700"><strong>Exam Name:</strong> <%= result.examDetails[0].examName %></p>
      <p class="text-lg text-gray-700"><strong>Number of Questions:</strong> <%= result.examDetails[0].numberOfQuestions %></p>
      <p class="text-lg text-gray-700"><strong>Created At:</strong> <%= new Date(result.examDetails[0].createdAt).toLocaleString() %></p>
    </section>

    <!-- Score Section -->
    <section class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Score</h2>
      <p class="text-lg text-gray-700"><strong>Score:</strong> <%= result.score %></p>
    </section>
  </div>

</body>
</html>
