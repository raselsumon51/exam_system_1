<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exam Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    function confirmDelete(examId) {
      if (confirm("Are you sure you want to delete this exam? This action cannot be undone.")) {
        document.getElementById(`deleteForm-${examId}`).submit();
      }
    }
  </script>
</head>
<body class="bg-gray-100">

  <div class=" mx-auto px-2 py-8">
    <h3 class="text-center text-2xl font-semibold mb-6 text-gray-800">Exam Details</h3>

    <!-- Add Exam Button -->
    <div class="mb-4 text-right">
      <a href="/exam/create" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-500">
        Add Exam
      </a>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto bg-white  shadow-md">
      <table class="min-w-full text-sm text-left text-gray-700 border-collapse">
        <thead class="bg-indigo-600 text-white">
          <tr>
            <th class="px-6 py-3 border-b">Subject Name</th>
            <th class="px-6 py-3 border-b">Exam Name</th>
            <th class="px-6 py-3 border-b">Number of MCQ Questions</th>
            <th class="px-6 py-3 border-b">Duration (min)</th>
            <th class="px-6 py-3 border-b">Marks/Q</th>
            <th class="px-6 py-3 border-b">Negative/Q</th>
            <th class="px-6 py-3 border-b">Created At</th>
            <th class="px-6 py-3 border-b">Start</th>
            <th class="px-6 py-3 border-b">Update</th>
            <th class="px-6 py-3 border-b">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% exams.forEach(exam => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-6 py-3"><%= exam.subjectName %></td>
              <td class="px-6 py-3"><%= exam.examName %></td>
              <td class="px-6 py-3"><%= exam.numberOfQuestions %></td>
              <td class="px-6 py-3"><%= exam.examDuration || '-' %></td>
              <td class="px-6 py-3"><%= exam.marksPerQuestion || '-' %></td>
              <td class="px-6 py-3"><%= exam.negativeMarks || '-' %></td>
              <td class="px-6 py-3"><%= new Date(exam.createdAt).toLocaleString() %></td>

              <!-- Start Exam -->
              <td class="px-6 py-3 text-center">
                <a href="/exam-started/<%= exam._id %>" class="bg-blue-600 text-white px-3 py-1.5 rounded-md hover:bg-blue-500 text-sm">
                  Start
                </a>
              </td>

              <!-- Update Exam -->
              <td class="px-6 py-3 text-center">
                <a href="/exam/edit/<%= exam._id %>" class="bg-yellow-500 text-white px-3 py-1.5 rounded-md hover:bg-yellow-400 text-sm">
                  Update
                </a>
              </td>

              <!-- Delete Exam -->
              <td class="px-6 py-3 text-center">
                <form id="deleteForm-<%= exam._id %>" action="/exam/delete/<%= exam._id %>" method="POST"></form>
                <button 
                  onclick="confirmDelete('<%= exam._id %>')" 
                  class="bg-red-600 text-white px-3 py-1.5 rounded-md hover:bg-red-500 text-sm">
                  Delete
                </button>
              </td>

            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
