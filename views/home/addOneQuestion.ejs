<div class="container mt-5">
    <h1 class="text-center mb-4">Enter Questions and Select Correct Answers 1</h1>
    <form action="/exam/<%= examId %>" method="POST">
        
        <!-- Hidden field for examId -->
        <input type="hidden" name="examId" value="<%= examId %>">

        <!-- Question 1 -->
        <div class="mb-4">
            <label for="question1" class="form-label">Question 1:</label>
            <textarea class="form-control" id="question1" name="question1" rows="3" placeholder="Enter your question here" required></textarea>
        </div>

        <!-- Options for Question 1 -->
        <div class="mb-3 d-flex align-items-center">
            <input type="radio" name="correct_answer_1" value="a" class="form-check-input me-2">
            <input type="text" class="form-control" name="option_a_1" placeholder="Enter Option A" required>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <input type="radio" name="correct_answer_1" value="b" class="form-check-input me-2">
            <input type="text" class="form-control" name="option_b_1" placeholder="Enter Option B" required>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <input type="radio" name="correct_answer_1" value="c" class="form-check-input me-2">
            <input type="text" class="form-control" name="option_c_1" placeholder="Enter Option C" required>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <input type="radio" name="correct_answer_1" value="d" class="form-check-input me-2">
            <input type="text" class="form-control" name="option_d_1" placeholder="Enter Option D" required>
        </div>


        <!-- Submit button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

