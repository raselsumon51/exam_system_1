<!-- Subjects Hero-Like Section -->
<section id="subjects" class="flex items-center justify-center min-h-[60vh] bg-gray-100 p-8">
  <div class="text-center max-w-6xl">
    
    <!-- Heading -->
    <h2 class="text-4xl sm:text-5xl font-bold text-gray-800 mb-4 font-bengali">বিষয়সমূহ</h2>
    
    <!-- Tagline / Description -->
    <p class="text-lg sm:text-xl text-gray-600 mb-6 font-bengali">
      ফ্রি অনলাইন পরীক্ষা। নিজের প্রস্তুতি যাচাই করুন। প্রতিদিন নতুন চ্যালেঞ্জ গ্রহণ করুন এবং দক্ষতা বাড়ান।
    </p>
    
    <!-- Call-to-Action Button -->
    <!-- <a href="#start-test" class="inline-block bg-blue-500 text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-600 transition mb-10">
      পরীক্ষা শুরু করুন
    </a> -->
    <!-- Instruction Text -->
    <p class="text-md sm:text-lg text-gray-700 mb-6 font-bengali">
      পরীক্ষার জন্য বা প্রস্তুতি নেয়ার জন্য বিষয় নির্বাচন করুন।
    </p>
    
    
    <!-- Subjects Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
      <% subjects.forEach(subject => { %>
        <a href="/subject/<%= subject %>" 
           class="flex flex-col items-center justify-center bg-white shadow-md rounded-xl p-6 text-center font-semibold text-gray-700
                  hover:bg-blue-50 hover:shadow-xl hover:scale-105 transition transform">
          <!-- FontAwesome Icon Example -->
          <i class="fas fa-book-open text-4xl text-blue-500 mb-3"></i>
          <!-- <%= subject %> -->
          <%= subject.charAt(0).toUpperCase() + subject.slice(1) %>

        </a>
      <% }) %>
    </div>

  </div>
</section>
