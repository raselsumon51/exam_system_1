<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exam Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Add Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      font-size: 12px; /* Set a smaller base font size */
    }
    h1 {
      font-size: 16px; /* Smaller header size */
    }
    h3 {
      font-size: 14px; /* Smaller question header size */
    }
    label {
      font-size: 12px; /* Adjust label font size */
    }
    button {
      font-size: 12px; /* Button text font size */
    }
    .container {
    max-width: 800px;
    margin: 0 auto;
  }
  </style>
</head>
<body class="bg-gray-100">

  <% data.forEach(exam => { %>
    <div class="container my-4">
      <div class="bg-white rounded-lg shadow-sm">
        <div class="bg-blue-600 text-white p-3 rounded-t-lg">
          <h1 class="font-semibold">Exam: <%= exam.examName %></h1>
        </div>
        <div class="p-4">
          <p class="mb-1"><strong>Subject:</strong> <%= exam.subjectName %></p>
          <p class="mb-1"><strong>Number of Questions:</strong> <%= exam.numberOfQuestions %></p>
          <!-- <p class="mb-4"><strong>Created At:</strong> <%= new Date(exam.createdAt).toLocaleString() %></p> -->
          
          <form action="/submit-answers" method="POST">
            <input type="hidden" name="examId" value="<%= examId %>">
  
            <% exam.questions.forEach((questionSet, setIndex) => { %>
              <div class="mt-4 px-4">
                <% questionSet.questions.forEach((question, index) => { %>
                  <div class="mb-3">
                    <h3 class="font-medium"> <b> <%= index + 1 %>. <%= question.text %> </b> </h3>
                    <div class="space-y-1 mt-1">
                      <% let optionLabels = ['A', 'B', 'C', 'D']; %>
                      <% let optionIndex = 0; %>
                      <% for (const [key, value] of Object.entries(question.options)) { %>
                        <div class="flex items-center">
                          <input class="form-radio h-4 w-4 text-blue-600" type="radio" name="question_<%= setIndex %>_<%= index %>" id="option_<%= setIndex %>_<%= index %>_<%= key %>" value="<%= key %>" />
                          <label class="ml-2" for="option_<%= setIndex %>_<%= index %>_<%= key %>">
                            <b><%= optionLabels[optionIndex] %>.</b> <%= value %>
                          </label>
                        </div>
                        <% optionIndex++; %>
                      <% } %>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% }) %>

            <div class="flex justify-center mt-4">
              <button type="submit" class="px-5 py-2 bg-indigo-600 text-white font-medium rounded-md shadow-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Submit Answers
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% }) %>

</body>
</html>
