<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exam Details</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Noto+Sans+Bengali&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Noto Sans', 'Noto Sans Bengali', sans-serif;
      background-color: #ffffff;
    }
    .font-bengali {
      font-family: 'Noto Sans Bengali', sans-serif;
    }
    .option {
      display: flex;
      align-items: center;
      padding: 6px 10px;
      border-radius: 6px;
      transition: background-color 0.2s;
    }
    /* .option:hover {
      background-color: #f9fafb;
    } */
    .correct {
      background-color: #e6f4ea; 
    }
    .option input[type="radio"] {
      accent-color: #2563eb; /* blue color for radio */
    }
  </style>
</head>
<body class="bg-gray-50">

  <div class="container mx-auto mt-8 px-4 py-6">
    <% data.forEach(exam => { %>
      <div class="bg-white shadow rounded-lg mb-6 p-6">
        <h1 class="text-lg font-semibold mb-2">Exam: <%= exam.examName %></h1>
        <p class="text-sm text-black mb-1"><strong>Subject:</strong> <%= exam.subjectName %></p>
        <p class="text-sm text-black mb-1"><strong>Number of Questions:</strong> <%= exam.numberOfQuestions %></p>
        <p class="text-sm text-black"><strong>Created At:</strong> <%= new Date(exam.createdAt).toLocaleString() %></p>

        <form action="/submit-answers" method="POST" class="mt-6">
          <input type="hidden" name="examId" value="<%= examId %>">

          <% exam.questions.forEach((questionSet, setIndex) => { %>
            <div class="mt-4">
              <% questionSet.questions.forEach((question, index) => { %>
                <div class="mb-6">
                  <h3 class="text-base font-semibold mb-2">
                     <%= (index + 1).toLocaleString('bn-BD') %>. <%= question.text %>
                  </h3>

                  <div class="space-y-2">
                    <% let optionLabels = ['ক', 'খ', 'গ', 'ঘ']; %>
                    <% let optionIndex = 0; %>
                    <% for (const [key, value] of Object.entries(question.options)) { %>
                      <label class="option <%= question.correctAnswer === key ? 'correct' : '' %>">
                        <input
                          class="h-4 w-4 text-blue-500"
                          type="radio"
                          name="question_<%= setIndex %>_<%= index %>"
                          id="option_<%= setIndex %>_<%= index %>_<%= key %>"
                          value="<%= key %>"
                          disabled
                          <%= question.correctAnswer === key ? 'checked' : '' %>
                        />
                        <span class="ml-2 <%= question.correctAnswer === key ? 'text-green-700 font-semibold' : 'text-black' %>">
                          <b><%= optionLabels[optionIndex] %>.</b> <%= value %>
                        </span>
                      </label>
                      <% optionIndex++; %>
                    <% } %>
                  </div>

                 <p class="mt-1 text-base">
                  <strong>সঠিক উত্তর:</strong> 
                  <%= {
                        'A': 'ক',
                        'B': 'খ',
                        'C': 'গ',
                        'D': 'ঘ'
                      }[(question.correctAnswer || '').toUpperCase().trim()] || "উত্তর প্রদান করা হয়নি" %>
                </p>

                </div>
              <% }) %>
            </div>
          <% }) %>

          <!-- <div class="mt-6 text-center">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-400 focus:outline-none">
              Submit Answers
            </button>
          </div> -->
        </form>
      </div>
    <% }) %>
  </div>

</body>
</html>
