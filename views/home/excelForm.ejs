<!-- Form to input Excel file and hidden exam ID -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
    <form action="/excel/<%= examId %>/" method="POST" enctype="multipart/form-data" class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h3 class="text-2xl font-bold text-center mb-6 text-gray-700">Import Questions via Excel</h3>
  
      <div class="mb-4 text-center">
        <input type="file" name="excel" class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" required>
      </div>
  
      <input type="hidden" name="examId" value="<%= examId %>">
  
      <div class="mb-4 text-center">
      <button type="submit" class="w-full text-center py-2 px-4 bg-blue-600 text-black font-semibold rounded-md shadow hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-400">
        Upload Excel
      </button>
    </div>
    </form>
  </div>
  