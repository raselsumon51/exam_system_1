<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center mb-4">Enter Questions and Select Correct Answers</h1>
    <form action="/question-submit" method="POST">
        
        <!-- Hidden field for examId -->
        <input type="hidden" name="examId" value="<%= examId %>">

        <!-- Loop to generate two questions starting from i = 0 -->
        <% for (let i = 0; i < numOfQuestions ; i++) { %>
            <!-- Question Number (Hidden Field) -->
            <input type="hidden" name="questions[<%= i %>][number]" value="<%= i + 1 %>">

            <!-- Question Text Area with Number -->
            <div class="mb-4">
                <label for="question<%= i %>" class="form-label">Question <%= i + 1 %>:</label>
                <textarea class="form-control" id="question<%= i %>" name="questions[<%= i %>][text]" rows="3" placeholder="Enter your question here" required></textarea>
            </div>

            <!-- Options for each question -->
            <div class="mb-3 d-flex align-items-center">
                <input type="checkbox" name="questions[<%= i %>][answer]" value="a" class="form-check-input me-2">
                <input type="text" class="form-control" name="questions[<%= i %>][option_a]" placeholder="Enter Option A" required>
            </div>
            <div class="mb-3 d-flex align-items-center">
                <input type="checkbox" name="questions[<%= i %>][answer]" value="b" class="form-check-input me-2">
                <input type="text" class="form-control" name="questions[<%= i %>][option_b]" placeholder="Enter Option B" required>
            </div>
            <div class="mb-3 d-flex align-items-center">
                <input type="checkbox" name="questions[<%= i %>][answer]" value="c" class="form-check-input me-2">
                <input type="text" class="form-control" name="questions[<%= i %>][option_c]" placeholder="Enter Option C" required>
            </div>
            <div class="mb-3 d-flex align-items-center">
                <input type="checkbox" name="questions[<%= i %>][answer]" value="d" class="form-check-input me-2">
                <input type="text" class="form-control" name="questions[<%= i %>][option_d]" placeholder="Enter Option D" required>
            </div>

            <hr> <!-- Divider between questions -->
        <% } %>

        <!-- Submit button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

</body>
</html>
