<div class="flex items-center justify-center min-h-[80vh] px-4 py-8 bg-white rounded-lg shadow-lg max-w-full mx-auto">
  <div class="w-full max-w-4xl">
    
    <!-- Heading -->
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6 text-center">পরীক্ষার ফলাফল</h2>
    
    <!-- Score Row -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 text-center mb-6">
      <div class="bg-gray-100 p-4 rounded-lg">
        <p class="text-gray-600 font-medium">মোট প্রশ্ন</p>
        <p class="text-gray-800 font-bold text-xl"><%= totalQuestions %></p>
      </div>
      <div class="bg-green-100 p-4 rounded-lg">
        <p class="text-gray-600 font-medium">সঠিক উত্তর</p>
        <p class="text-green-600 font-bold text-xl"><%= score %></p>
      </div>
      <div class="bg-red-100 p-4 rounded-lg">
        <p class="text-gray-600 font-medium">ভুল উত্তর</p>
        <p class="text-red-600 font-bold text-xl"><%= wrong %></p>
      </div>
      <div class="bg-yellow-100 p-4 rounded-lg">
        <p class="text-gray-600 font-medium">উপেক্ষিত</p>
        <p class="text-yellow-500 font-bold text-xl"><%= skipped %></p>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-6 text-center space-y-4">
      <a href="/correct-answer/<%= examId %>" 
         class="block sm:inline-block w-full sm:w-auto bg-blue-600 text-white px-6 py-3 rounded-md shadow-md hover:bg-blue-500 transition">
        ফলাফল পৃষ্ঠা দেখুন
      </a>
      <!-- Uncomment if you want marks page -->
      <!--
      <a href="/all-marks/<%= examId %>/<%= userId %>" 
         class="block sm:inline-block w-full sm:w-auto bg-indigo-600 text-white px-6 py-3 rounded-md shadow-md hover:bg-indigo-500 transition">
        মার্কস পৃষ্ঠা দেখুন
      </a>
      -->
    </div>

  </div>
</div>
